<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.testinone" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".components.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
        <activity
            android:name=".components.CustomNotificationActivity"
            android:label="@string/title_activity_custom_notification" >
        </activity>
        <activity
            android:name=".components.BackAppActivity"
            android:label="@string/title_activity_back_app"
            android:parentActivityName=".components.NotificationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".components.BackScreenActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_back_screen"
            android:launchMode="singleTask"
            android:taskAffinity="" >
        </activity>
        <activity
            android:name=".BlankActivity"
            android:label="@string/title_activity_blank" >
        </activity>

        <receiver
            android:name=".components.MyNotificationReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
    </application>

</manifest>
